<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <gradient
                android:endColor="@color/gray_hint"
                android:gradientRadius="200dp"
                android:startColor="@color/white"
                android:type="radial" />
        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <gradient
                android:endColor="@color/primary_white"
                android:gradientRadius="200dp"
                android:startColor="@color/white"
                android:type="radial" />
        </shape>
    </item>

    <item
        android:bottom="10dp"
        android:drawable="@drawable/ic_view_receipt"
        android:end="8dp"
        android:start="8dp"
        android:top="10dp" />


</layer-list>
